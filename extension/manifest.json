{
  "manifest_version": 3,
  "name": "Voxly - Instant Transcripts",
  "short_name": "Voxly",
  "version": "2.5.0",
  "description": "Transform audio & video into AI-ready transcripts. Cloud-powered transcription with Deepgram Nova-2. Export to JSON, Markdown, SRT.",
  "permissions": [
    "storage",
    "tabs",
    "tabCapture",
    "activeTab",
    "offscreen",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "https://ohxuifdseybxckmprcry.supabase.co/*",
    "wss://api.deepgram.com/*",
    "https://noembed.com/*"
  ],
  "action": {
    "default_title": "Open Voxly",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
